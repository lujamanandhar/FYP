# =============================================================================
# NutriLift Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env to version control!

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL database connection settings
DB_NAME=nutrilift_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Database connection pool settings (optional)
# DB_CONN_MAX_AGE=600

# =============================================================================
# Django Configuration
# =============================================================================
# SECURITY WARNING: Keep the secret key used in production secret!
# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# SECURITY WARNING: Don't run with debug turned on in production!
# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Example: localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# Secret key for JWT token signing
# Generate a secure random key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# JWT token expiration time in seconds (default: 24 hours)
# JWT_EXPIRATION_DELTA=86400

# =============================================================================
# CORS Configuration
# =============================================================================
# Allow all origins (set to False in production)
CORS_ALLOW_ALL_ORIGINS=True

# Comma-separated list of allowed origins (used when CORS_ALLOW_ALL_ORIGINS=False)
# Example: http://localhost:3000,https://yourdomain.com
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
# Email backend for sending emails
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# Cache Configuration (Optional)
# =============================================================================
# Cache backend (default: local memory cache)
# For production, consider Redis:
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# =============================================================================
# Static Files Configuration (Production)
# =============================================================================
# Static files root directory
# STATIC_ROOT=/var/www/static

# Media files root directory
# MEDIA_ROOT=/var/www/media

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# =============================================================================
# Third-Party Service Keys (Optional)
# =============================================================================
# Add any third-party API keys here
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# =============================================================================
# Deployment Platform Specific (Railway/Heroku)
# =============================================================================
# Railway automatically provides DATABASE_URL
# If using Railway, you can use DATABASE_URL instead of individual DB_* variables
# DATABASE_URL=postgresql://user:password@host:port/database

# Heroku also provides DATABASE_URL automatically
# PORT is automatically set by the platform
# PORT=8000
